<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
android:weightSum="2"
    android:background="#FFFFFF">
    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vfhome_about"
        android:autoStart="true"
        android:layout_weight="0.2"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_left"
        android:layout_gravity="center_horizontal" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home1"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home2"
            android:layout_gravity="center_horizontal"
            />

        </ViewFlipper>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="0dp"
    android:layout_weight="1.15"
    android:layout_alignBottom="@+id/vfhome_about"
    android:background="#FFFFFF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhome_title"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"

        android:gravity="center"
        android:fontFamily="sans-serif-light."
        android:layout_gravity="center" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhome_about"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:gravity="center|center_vertical|center_horizontal"

        android:fontFamily="sans-serif-light."
        android:layout_gravity="center_horizontal|center_vertical|center" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
android:layout_weight=".65"

    android:background="#DDD">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhome_about1"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light."
        android:layout_gravity="center_horizontal|center|center_vertical" />
</LinearLayout>

</LinearLayout>

</ScrollView>